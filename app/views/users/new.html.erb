
<div class="log-form">
	<h1 class="logo-all"><span class="logo">Ruby</span><span class="logo2"> Tweets</span></h1>
	<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
		<%= f.label :username %>
		<br>
		<%= f.text_field :username %>
		<br>
		<%= f.label :fname %>
		<br>
		<%= f.text_field :fname %>
		<br>
		<%= f.label :lname %>
		<br>
		<%= f.text_field :lname %>
		<br>
		<%= f.label :email %>
		<br>
		<%= f.text_field :email %>
		<br>
		<%= f.label :password %>
		<br>
		<%= f.text_field :password %>
		<br>
		<%= f.submit :Signup %>
	<% end %>	
</div>